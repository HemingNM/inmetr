citHeader("To cite package 'inmetr' in publications use:")

year <- 2016
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
         title = "inmetr: A Package to Import Historical Data from Brazilian Meteorological
Stations",
         author = personList(as.person("Jonatan Tatsch")),
         year = year,
         note = vers,

         textVersion =
         paste0("Tatsch, J.D. ",
               year,
               ". inmetr: A Package to Import Historical Data from Brazilian Meteorological Stations. ",
               "Universidade Federal de Santa Maria (UFSM), Santa Maria-RS, Brazil."
               
               ),
         institution = "Universidade Federal de Santa Maria-UFSM",
         url = "https://github.com/jdtatsch/inmetr",
         address = "Santa Maria-RS, Brazil")
         