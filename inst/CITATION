citHeader("To cite package 'inmetr' in publications use:")

year <- as.integer(format(Sys.Date(), "%Y"))
vers <- paste("R package version", "0.2.5")

citEntry(entry = "Manual",
         title = "inmetr: Historical Data from Brazilian Meteorological Stations in R",
         author = personList(as.person("Jonatan Tatsch")),
         year = year,
         note = vers,
         doi = "https://doi.org/10.5281/zenodo.580813",

         textVersion = paste0("Tatsch, J.D. ",
               year,
               ". inmetr R package (v 0.2.5): Historical Data from Brazilian Meteorological Stations in R. ",
               "Zenodo. https://doi.org/10.5281/zenodo.580813."
               
               ),
         institution = "Universidade Federal de Santa Maria-UFSM",
         url = "https://github.com/lhmet/inmetr")
         